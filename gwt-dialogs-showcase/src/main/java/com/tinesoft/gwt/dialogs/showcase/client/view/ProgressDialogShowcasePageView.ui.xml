<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:with
		type="com.tinesoft.gwt.dialogs.showcase.client.resources.ShowcaseResources"
		field="res" />

	<ui:style>
		.pColor
		{
			width:128px;
			height:128px;
			margin:0px 10px 10px 10px;
		}
	</ui:style>
	<g:FlowPanel>
		<g:HTMLPanel>
			<h1>ProgressDialog Showcase</h1>
		</g:HTMLPanel>
		<g:FlowPanel styleName="{res.css.clear}">
			<g:HorizontalPanel  addStyleNames="{res.css.middle}">
				<g:Button ui:field="showDialogButton" addStyleNames="{res.css.button} {res.css.selectedButton}">
					<ui:msg description="Show progress dialog button">Show dialog...</ui:msg>
				</g:Button>	
			</g:HorizontalPanel>			
		</g:FlowPanel>
		<g:FlowPanel styleName="{res.css.clear}">
			<g:FlowPanel styleName="{res.css.container}">
				<g:Hyperlink ui:field="backToMain">&lt;&lt; Back to main page</g:Hyperlink>
			</g:FlowPanel>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder>
