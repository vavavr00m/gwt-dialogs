<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<!-- @author Tine Kondo -->

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:with
		type="com.tinesoft.gwt.dialogs.showcase.client.resources.ShowcaseResources"
		field="res" />

	<g:FlowPanel>
		<g:HTMLPanel>
			<h1>GWT Dialogs Showcase</h1>
		</g:HTMLPanel>

		<g:FlowPanel addStyleNames="{res.css.clear} {res.css.notSelectable}">
			<g:FlowPanel styleName="{res.css.left}">
				<g:FlowPanel ui:field="messageBoxShowcase" styleName="{res.css.container}">
					<g:FlowPanel styleName="{res.css.left}">
						<g:Image resource="{res.messageboxesIcon}"></g:Image>
					</g:FlowPanel>
					<g:FlowPanel styleName="{res.css.left}">
						<g:Label styleName="{res.css.title}">MessageDialog Showcase</g:Label>
						<g:Label styleName="{res.css.content}">demonstrates the standard dialogs that
							allows you to display messages (error, warning,
							information,...)</g:Label>
					</g:FlowPanel>
					<g:FlowPanel styleName="{res.css.clear}"></g:FlowPanel>
				</g:FlowPanel>
			</g:FlowPanel>

			<g:FlowPanel styleName="{res.css.left}">
				<g:FlowPanel ui:field="colorDialogShowcase" styleName="{res.css.container}">
					<g:FlowPanel styleName="{res.css.left}">
						<g:Image resource="{res.colorDialogIcon}"></g:Image>
					</g:FlowPanel>
					<g:FlowPanel styleName="{res.css.left}">
						<g:Label styleName="{res.css.title}">ColorDialog Showcase</g:Label>
						<g:Label styleName="{res.css.content}">demonstrates the color dialog that
							allows you to pick up a color.</g:Label>
					</g:FlowPanel>
					<g:FlowPanel styleName="{res.css.clear}"></g:FlowPanel>
				</g:FlowPanel>
			</g:FlowPanel>

			<g:FlowPanel styleName="{res.css.clear}" />

			<g:FlowPanel styleName="{res.css.left}">
				<g:FlowPanel ui:field="menuDialogShowcase" styleName="{res.css.container}">
					<g:FlowPanel styleName="{res.css.left}">
						<g:Image resource="{res.menuDialogIcon}"></g:Image>
					</g:FlowPanel>
					<g:FlowPanel styleName="{res.css.left}">
						<g:Label styleName="{res.css.title}">ContextMenuDialog Showcase</g:Label>
						<g:Label styleName="{res.css.content}">demonstrates the context menu dialog
							that allows you to display context menus.</g:Label>
					</g:FlowPanel>
					<g:FlowPanel styleName="{res.css.clear}"></g:FlowPanel>
				</g:FlowPanel>
			</g:FlowPanel>
			
			<g:FlowPanel styleName="{res.css.left}">
				<g:FlowPanel ui:field="progressDialogShowcase"
					styleName="{res.css.container}">
					<g:FlowPanel styleName="{res.css.left}">
						<g:Image resource="{res.progressDialogIcon}"></g:Image>
					</g:FlowPanel>
					<g:FlowPanel styleName="{res.css.left}">
						<g:Label styleName="{res.css.title}">ProgressDialog Showcase</g:Label>
						<g:Label styleName="{res.css.content}">demonstrates the progress dialog that
							allows you to show progress.</g:Label>
					</g:FlowPanel>
					<g:FlowPanel styleName="{res.css.clear}"></g:FlowPanel>
				</g:FlowPanel>
			</g:FlowPanel>

			<g:FlowPanel styleName="{res.css.clear}" />
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder>
