<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.header {
			/*background: url("images/header/logo.png") no-repeat;*/
			width: 100%;
			height: 100%;
		}
		.head {
			width: 100%;
			/*background: #fff url("images/header/bg.png") repeat-x;*/
			margin: 0;
			padding: 0;
		}
		.content {
			margin: 20px 10px;
		}
	</ui:style>
	<g:DockLayoutPanel unit="PX" ui:field="dock">
		<g:center><g:ScrollPanel><g:FlowPanel ui:field="content" styleName="{style.content}" /></g:ScrollPanel></g:center>
		<g:north size="100">
			<g:FlowPanel styleName="{style.head}">
				<g:FlowPanel ui:field="header" styleName="{style.header}" />
			</g:FlowPanel>
		</g:north>
		<g:south size="0"><g:LayoutPanel ui:field="footer" /></g:south>
		<g:west size="250"><g:LayoutPanel ui:field="sidebar" /></g:west>		
	</g:DockLayoutPanel>
</ui:UiBinder>
