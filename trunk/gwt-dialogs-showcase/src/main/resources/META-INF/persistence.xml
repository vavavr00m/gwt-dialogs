<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" version="2.0">

	<persistence-unit name="dbprod" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>

		<!-- ================== MAPPING ================== -->
		<!-- authentification -->
		<class>lu.sfeir.optima.server.auth.model.Account</class>
		<!-- contact -->
		<class>lu.sfeir.optima.server.contact.model.Address</class>
		<class>lu.sfeir.optima.server.contact.model.Contact</class>
		<class>lu.sfeir.optima.server.contact.model.EMail</class>
		<class>lu.sfeir.optima.server.contact.model.PhoneNumber</class>
		<class>lu.sfeir.optima.server.contact.model.ContactEvent</class>
		<class>lu.sfeir.optima.server.contact.model.ContactOriginType</class>
		<class>lu.sfeir.optima.server.contact.model.ReferenceGenerator</class>
		<class>lu.sfeir.optima.server.contact.model.ZipCode</class>
		<!-- calendar -->
		<class>lu.sfeir.optima.server.calendar.model.Appointment</class>
		<class>lu.sfeir.optima.server.calendar.model.Room</class>
		<class>lu.sfeir.optima.server.calendar.model.Treatment</class>
		<class>lu.sfeir.optima.server.calendar.model.Stage</class>

		<properties>
			<!-- ================== HSQLDB ================== -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />
			<property name="hibernate.connection.username" value="optima" />
			<property name="hibernate.connection.password" value="optima" />
			<property name="hibernate.max_fetch_depth" value="5" />
			<!-- ================== Database ================== -->
			<property name="hibernate.connection.url" value="jdbc:mysql://devsrv/optima" />
			<!-- ================== Optional ================== -->
			<property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<!-- c3p0 : JDBC DataSources/Resource Pools. -->
			<property name="hibernate.c3p0.min_size" value="3"/>
            <property name="hibernate.c3p0.max_size" value="10"/>
            <property name="hibernate.c3p0.timeout" value="300"/>
            <property name="hibernate.c3p0.max_statements" value="50"/>
            <property name="hibernate.c3p0.idle_test_period" value="3600"/>
		</properties>
	</persistence-unit>

	<persistence-unit name="dbdev" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>

		<!-- ================== MAPPING ================== -->
		<!-- authentification -->
		<class>lu.sfeir.optima.server.auth.model.Account</class>
		<!-- contact -->
		<class>lu.sfeir.optima.server.contact.model.Address</class>
		<class>lu.sfeir.optima.server.contact.model.Contact</class>
		<class>lu.sfeir.optima.server.contact.model.EMail</class>
		<class>lu.sfeir.optima.server.contact.model.PhoneNumber</class>
		<class>lu.sfeir.optima.server.contact.model.ContactEvent</class>
		<class>lu.sfeir.optima.server.contact.model.ContactOriginType</class>
		<class>lu.sfeir.optima.server.contact.model.ReferenceGenerator</class>
		<class>lu.sfeir.optima.server.contact.model.ZipCode</class>
		<!-- calendar -->
		<class>lu.sfeir.optima.server.calendar.model.Appointment</class>
		<class>lu.sfeir.optima.server.calendar.model.Room</class>
		<class>lu.sfeir.optima.server.calendar.model.Treatment</class>
		<class>lu.sfeir.optima.server.calendar.model.Stage</class>

		<properties>
			<!-- ================== HSQLDB ================== -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect" />
			<property name="hibernate.connection.driver_class" value="org.hsqldb.jdbcDriver" />
			<property name="hibernate.connection.username" value="sa" />
			<property name="hibernate.connection.password" value="" />
			<property name="hibernate.max_fetch_depth" value="5" />
			<!-- ================== Database ================== -->
			<property name="hibernate.connection.url" value="jdbc:hsqldb:file:db/dev/optima" />
			<!-- ================== Optional ================== -->
			<property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider" />
			<property name="hibernate.hbm2ddl.auto" value="create" />
<!-- 			<property name="hibernate.show_sql" value="true" /> -->
<!-- 			<property name="hibernate.format_sql" value="true" /> -->
			<property name="hibernate.hbm2ddl.import_files" value="fixtures.sql" />
		</properties>
	</persistence-unit>
</persistence>
